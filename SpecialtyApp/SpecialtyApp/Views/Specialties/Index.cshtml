@model IEnumerable<SpecialtyApp.Models.Specialty>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var specialty in Model)
        {
            <tr>
                <td>@specialty.Id</td>
                <td>@specialty.Name</td>
                <td>@specialty.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@specialty.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
